@model IEnumerable<Core.Entities.ProductModels.Product>

@{
    ViewData["Title"] = "Webshop";
}

<div class="album py-5 bg-light">
    <div class="container">
        <div>
            <nav class="navbar navbar-dark default-color">

                <p class="text-danger">@TempData["Error"]</p>
                <p class="text-danger">@TempData["message"]</p>


                @using (Html.BeginForm("SearchProduct", "Products", FormMethod.Get, new { @class = "form-inline my-2 my-lg-0 ml-auto" }))
                {
                    <input type="text" name="name" class="form-control" placeholder="Search a Product..." aria-label="Search" />
                    <input type="submit" value="Search" class="btn btn-outline-dark btn-md my-2 my-sm-0 ml-3" />
                }
                @using (Html.BeginForm("Index", "Products", FormMethod.Get))
                {
                    <input type="submit" value="Reset" class="btn btn-outline-danger btn-md my-2 my-sm-0 ml-3" />
                }

            </nav>
        </div>

        <div class="row">
            @if (Model != null)
            {
                @foreach (var item in Model)
                {
                    <div class="col-md-4">
                        <div class="card mb-4 box-shadow">
                            <img class="card-img-top" data-src="@item.PictureUrl" alt="Thumbnail [100%x225]" style="height: 275px; width: 100%; display: block;"
                                 src="@item.PictureUrl" data-holder-rendered="true">
                            <div class="card-body">
                                <p class="card-text">@item.Description</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted">@item.ProductBrand.Name</small>
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-sm btn-outline-secondary mr-3">Buy</button>
                                        <button type="button" class="btn btn-sm btn-outline-secondary">Info</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p>@TempData["Error"]</p>
            }
        </div>
    </div>
</div>
